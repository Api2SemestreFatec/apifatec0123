-- VIEW
CREATE VIEW COLABORADOR_APOTAMENTOS AS
SELECT
  id_apontamento,
  data,
  hora_inicio,
  hora_fim,
  projeto,
  solicitante,
  justificativa,
  situacao
FROM APONTEMENTOS

