-- Login
CREATE TABLE LOGIN (
    id_login INT IDENTITY(1,1) NOT NULL,
    login_name TEXT NOT NULL,
    access_level TEXT NOT NULL,
    passwd TEXT NOT NULL,
    PRIMARY KEY (id_login),
    FOREING KEY (colaborador) REFERENCES COLABORADORES (id_colaborador)
);

-- Colaboradores (temp)
CREATE TABLE COLABORADORES (
    id_colaborador INT IDENTITY(1,1) NOT NULL,
    matricula TEXT NOT NULL,
    fname TEXT NOT NULL,
    lname TEXT NOT NULL,
    email TEXT NOT NULL,
    PRIMARY KEY (id_colaborador),
);

-- Apontamentos
CREATE TABLE APONTAMENTOS (
    id_apontamento INT IDENTITY(1,1) NOT NULL,
    data TEXT NULL,
    hora_inicio TEXT NULL,
    hora_fim TEXT NULL,
    projeto TEXT NULL,
    solicitante TEXT NULL,
    justificativa TEXT NULL,
    situacao TEXT NULL,
    PRIMARY KEY (id_apontamento)
);

-- Apontamentos
/**CREATE TABLE LANCAMENTOS (
    id_lancamento INT IDENTITY(1,1) NOT NULL,
    data TEXT NULL,
    hora_inicio TEXT NULL,
    hora_fim TEXT NULL,
    projeto TEXT NULL,
    solicitante TEXT NULL,
    justificativa TEXT NULL,
    situacao TEXT NULL,
    PRIMARY KEY (id_apontamento)
